<Window x:Class="WPFClientApplication.PutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PutWindow" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Height="300" Width="300">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="71,7,0,0" TextWrapping="Wrap" x:Name="txtMake" VerticalAlignment="Top" RenderTransformOrigin="0.776,0.455" Width="213" Text="{Binding Path=Make}" />
        <TextBlock HorizontalAlignment="Left" Margin="7,10,0,0" TextWrapping="Wrap" Text="Make: " VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="7,36,0,0" TextWrapping="Wrap" Text="Model: " VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="71,33,0,0" TextWrapping="Wrap" x:Name="txtModel" VerticalAlignment="Top" RenderTransformOrigin="0.776,0.455" Width="213" Text="{Binding Path=Model}" />
        <TextBlock HorizontalAlignment="Left" Margin="7,62,0,0" TextWrapping="Wrap" Text="Year: " VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="71,59,0,0" TextWrapping="Wrap" x:Name="txtYear" VerticalAlignment="Top" RenderTransformOrigin="0.776,0.455" Width="213" Text="{Binding Path=Year}"/>
        <TextBlock HorizontalAlignment="Left" Margin="7,88,0,0" TextWrapping="Wrap" Text="Price: " VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="71,85,0,0" TextWrapping="Wrap" x:Name="txtPrice" VerticalAlignment="Top" RenderTransformOrigin="0.776,0.455" Width="213" Text="{Binding Path=Price}"/>
        <Button Content="Update &amp; Close" HorizontalAlignment="Left" Margin="182,115,0,0" VerticalAlignment="Top" Width="102" Click="Button_Click_1" />
    </Grid>
</Window>
